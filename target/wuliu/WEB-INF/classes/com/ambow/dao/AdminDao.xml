<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ambow.dao.AdminDao">
    <!-- 登录-->
    <select id="checkLogin" resultType="admin">
        select * from t_admin where admin_username = #{username} and admin_password = #{password}
    </select>
    <!-- 分页查询 -->
    <select id="findAdminList" resultType="admin">
        select * from t_admin where 1=1
        <if test="name != ''">
            and admin_name like concat('%',#{name},'%')
        </if>
    </select>

    <!--添加-->
    <insert id="saveAdmin" parameterType="admin">
        insert into t_admin
        (admin_name,admin_username,admin_password)
        value
        (#{admin_name},#{admin_username},#{admin_password})
    </insert>

    <!--根据id查-->
    <select id="findAdminById" parameterType="int" resultType="admin">
        select * from t_admin where admin_id = #{admin_id}
    </select>

    <update id="updateAdmin" parameterType="admin">
        update t_admin set
        admin_name=#{admin_name},
        admin_username=#{admin_username},
        admin_password=#{admin_password}
        where admin_id=#{admin_id}
    </update>
    <!--删除-->
    <delete id="deleteAdmin" parameterType="int">
        delete from t_admin where admin_id = #{admin_id}
    </delete>
</mapper>